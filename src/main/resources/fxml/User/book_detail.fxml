<AnchorPane prefHeight="700.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.user.BookDetailController">
    <VBox spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
        <HBox prefHeight="510.0" prefWidth="1360.0" spacing="20">
            <ImageView fx:id="bookCover" fitHeight="390.0" fitWidth="290.0" preserveRatio="true" />

            <VBox prefHeight="300.0" prefWidth="454.0" spacing="10">
                <Label fx:id="bookTitle" prefHeight="23.0" prefWidth="378.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" styleClass="book-title" stylesheets="@../../css/user/styling.css" text="Book Title" />
                <Label fx:id="bookAuthor" style="-fx-font-size: 14px;" styleClass="book-author" stylesheets="@../../css/user/styling.css" text="Author: Unknown" />
                <Label fx:id="bookPublishedDate" style="-fx-font-size: 14px;" styleClass="book-publisher" stylesheets="@../../css/user/styling.css" text="Published: N/A" />
                <Label fx:id="bookDescription" style="-fx-font-size: 14px;" styleClass="book-description" stylesheets="@../../css/user/styling.css" text="Description not available." wrapText="true" />
            </VBox>
         <WebView prefHeight="418.0" prefWidth="727.0" />
        </HBox>

        <VBox alignment="CENTER" prefHeight="134.0" prefWidth="1360.0" spacing="10">
            <HBox prefHeight="35.0" prefWidth="454.0" spacing="10">
                <Button fx:id="requestButton" onAction="#onRequestClicked" prefHeight="26.0" prefWidth="290.0" style="-fx-background-color: #303d43; -fx-text-fill: white;" text="Request Book" />
                <Button fx:id="addToFavoritesButton" onAction="#onAddToFavoritesClicked" prefHeight="26.0" prefWidth="207.0" style="-fx-background-color: transparent; -fx-text-fill: #303d43;" text="+ Add to Favorites" />
            </HBox>
            <Hyperlink fx:id="previewLink" prefWidth="190.0" style="-fx-font-size: 14px;" text="See preview at Google Books" />
        </VBox>

    <HBox alignment="BOTTOM_CENTER" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <Button fx:id="backButton" onAction="#onBackClicked" prefHeight="26.0" prefWidth="75.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Back" />
    </HBox>
    </VBox>
</AnchorPane>
