<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<StackPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1400.0" style="-fx-background-color: #95b1ee;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.user.BookDetailController">
   <children>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #fffdf5; -fx-background-radius: 10;">
         <children>
            <HBox minHeight="-Infinity" prefHeight="480.0" prefWidth="1360.0" spacing="20">
               <children>
                  <VBox prefHeight="480.0" prefWidth="289.0">
                     <children>
                        <ImageView fx:id="bookCover" fitHeight="350.0" fitWidth="250.0">
                           <image>
                              <Image url="@../../ui/admindashboard/bookcover.png" />
                           </image>
                        </ImageView>
                        <HBox  maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="70.0" prefWidth="68.0">
                           <children>
                              <ImageView fx:id="qrCode" fitHeight="69.0" fitWidth="117.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image   url="@../../ui/user/qr_code.png" />
                                 </image>
                              </ImageView>
                           </children>
                           <VBox.margin>
                              <Insets left="90.0" top="30.0" />
                           </VBox.margin>
                        </HBox>
                     </children>
                  </VBox>
                  <VBox prefHeight="480.0" prefWidth="295.0" spacing="10">
                     <children>
                        <Label fx:id="bookTitle" prefHeight="23.0" prefWidth="378.0" style="-fx-font-size: 27px; -fx-font-weight: bold;" styleClass="book-title" stylesheets="@../../css/user/styling.css" text="Book Title" textAlignment="JUSTIFY" wrapText="true">
                           <font>
                              <Font size="25.0" />
                           </font>
                        </Label>
                        <Label fx:id="bookAuthor" style="-fx-font-size: 15px;" styleClass="book-info" stylesheets="@../../css/user/styling.css" text="Author: Unknown">
                           <font>
                              <Font name="Rockwell" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="publisherLabel" layoutX="10.0" layoutY="74.0" style="-fx-font-size: 15px;" styleClass="book-info" stylesheets="@../../css/user/styling.css" text="Published: N/A" />
                        <Label fx:id="bookPublishedDate" style="-fx-font-size: 15px;" styleClass="book-info" stylesheets="@../../css/user/styling.css" text="Published: N/A" />
                        <Label fx:id="categoryLabel" style="-fx-font-size: 15px;" styleClass="book-info" stylesheets="@../../css/user/styling.css" text="Published: N/A" />
                        <Label fx:id="pageLabel" style="-fx-font-size: 15px;" styleClass="book-info" stylesheets="@../../css/user/styling.css" text="Published: N/A" />
                        <Label fx:id="isbnLabel" style="-fx-font-size: 15px;" styleClass="book-info" stylesheets="@../../css/user/styling.css" text="Published: N/A" />
                        <Label fx:id="bookDescription" style="-fx-font-size: 15;" styleClass="book-info" stylesheets="@../../css/user/styling.css" text="Description not available." textAlignment="JUSTIFY" wrapText="true" />
                     </children>
                  </VBox>
                  <WebView fx:id="previewWebView" prefHeight="418.0" prefWidth="700.0" />
               </children>
               <padding>
                  <Insets left="20.0" right="30.0" />
               </padding>
            </HBox>
            <VBox alignment="BASELINE_LEFT" prefHeight="60.0" prefWidth="1360.0" spacing="10">
               <children>
                  <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="700.0" spacing="40.0">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <children>
                        <Button fx:id="requestButton" minHeight="-Infinity" onAction="#onRequestClicked" prefHeight="35.0" prefWidth="150.0" style="-fx-background-color: #364c84; -fx-text-fill: white; -fx-background-radius: 7;" text="Request Book">
                           <font>
                              <Font name="Segoe UI" size="13.0" />
                           </font>
                        </Button>
                        <Button fx:id="addFavButton" mnemonicParsing="false" onAction="#addFav" style="-fx-background-color: transparent;">
                           <graphic>
                              <ImageView fx:id="addFavImage" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../ui/user/heart-add-line.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="BOTTOM_CENTER" minHeight="-Infinity" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
               <children>
                  <Button fx:id="backButton" prefHeight="35.0" prefWidth="80.0" style="-fx-background-color: #E05864; -fx-text-fill: white; -fx-background-radius: 7;" text="Back" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
   </padding>
</StackPane>
