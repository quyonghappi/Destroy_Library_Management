                            <children>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../../ui/user/conversation.png" />
                                    </image>
                                </ImageView>
                            </children>
                        </HBox>
                    </children>
                    <BorderPane.margin>
                        <Insets />
