        <HBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="106.0" AnchorPane.topAnchor="13.0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
            <!-- Left Section (Happy Reading) -->
            <VBox alignment="TOP_LEFT" prefWidth="600.0" spacing="20"> <!-- Reduced width -->
                <Text fx:id="welcomeText" text="Welcome back!" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <!-- <Button fx:id="startReadingButton" text="Start Reading" onAction="#onStartReading" styleClass="start-button" /> -->
            </VBox>

            <!-- Right Section (Best Book) -->
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="200.0" spacing="20"> <!-- Reduced width -->
                <Label text="Best Book" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <HBox spacing="20" alignment="CENTER_RIGHT">
                    <ImageView fx:id="bestBookImage" fitWidth="150" fitHeight="200" />
                    <VBox spacing="5">
                        <Label fx:id="bestBookTitle" text="Example Book Title" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                        <Label fx:id="bestBookAuthor" text="Author Name" style="-fx-font-size: 14px;" />
                        <Text fx:id="bestBookDescription" wrappingWidth="300" text="This is an example description for the best book." />
