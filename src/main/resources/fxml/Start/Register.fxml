<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="1200.0" stylesheets="@../../css/register.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.start.RegisterController">
    <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="620.0" prefWidth="950.0" style="-fx-background-radius: 30px; -fx-background-color: #FFFFFF;">
        <children>
            <!-- Left VBox: Form -->
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="605.0" prefWidth="405.0" spacing="10" styleClass="form-box">
                <children>
                    <Label prefHeight="50.0" prefWidth="183.0" styleClass="title" text="Sign Up" textFill="#4f73af">
                        <font>
                            <Font name="Segoe UI Black" size="48.0" />
                        </font>
                  <VBox.margin>
                     <Insets />
                  </VBox.margin>
                    </Label>
                    <Label styleClass="subtitle" text="Create your account" textFill="#4f73af">
                        <font>
                            <Font size="16.0" />
                        </font>
                    </Label>
                    <TextField fx:id="fullNameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="350.0" promptText="Full name" style="-fx-border-radius: 20px; -fx-background-radius: 20px; -fx-background-color: #bfd1f6;" stylesheets="@../../css/register.css">
                        <VBox.margin>
                            <Insets top="20.0" />
                        </VBox.margin>
                    </TextField>
                    <TextField fx:id="userNameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="350.0" promptText="User name" style="-fx-background-color: #bfd1f6; -fx-border-radius: 20px; -fx-background-radius: 20px;" stylesheets="@../../css/register.css">
                        <VBox.margin>
                            <Insets top="5.0" />
                        </VBox.margin>
                    </TextField>
                    <TextField fx:id="emailField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="350.0" promptText="Email" style="-fx-background-color: #bfd1f6; -fx-border-radius: 20px; -fx-background-radius: 20px;" stylesheets="@../../css/register.css">
                        <VBox.margin>
                            <Insets top="5.0" />
                        </VBox.margin>
                    </TextField>
                    <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="350.0" promptText="Password" style="-fx-background-radius: 20px; -fx-background-color: #bfd1f6;" stylesheets="@../../css/register.css" />
                    <PasswordField fx:id="confirmPasswordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="350.0" promptText="Confirm password" style="-fx-background-radius: 20px; -fx-background-color: #bfd1f6;" stylesheets="@../../css/register.css" />
                    <Button fx:id="signUpButton" onAction="#signUp" prefHeight="51.0" prefWidth="185.0" style="-fx-background-color: #88adf4; -fx-background-radius: 25px;" styleClass="register-button" stylesheets="@../../css/register.css" text="Sign up">
                        <!--                    Button fx:id="signUpButton" text="Sign up" onAction="#signUp" "/-->
                        <VBox.margin>
                            <Insets top="40.0" />
                        </VBox.margin>
                    </Button>
                    <Hyperlink fx:id="loginLink" onAction="#openLogin" text="Already have an account? Login" />
                    <Label fx:id="messageLabel" styleClass="subtitle" />
                </children>
            </VBox>
            <!-- Right VBox: Image -->
            <VBox alignment="CENTER" prefHeight="622.0" prefWidth="479.0">
                <children>
                    <ImageView fitHeight="613.0" fitWidth="406.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../../images/registration-form-1.jpg" />
                        </image>
                    </ImageView>
                </children>
            </VBox>
        </children>
      <StackPane.margin>
         <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
      </StackPane.margin>
    </HBox>
</StackPane>
