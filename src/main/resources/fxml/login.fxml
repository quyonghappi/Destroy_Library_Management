<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1466.0" styleClass="login-gradient-bg" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.UserDashboard.Controller.LoginController">
    <children>
        <!-- Left Panel for steps -->
        <VBox alignment="CENTER" layoutX="159.0" layoutY="147.0" prefHeight="315.0" prefWidth="387.0" spacing="20.0">
            <Label styleClass="header-text" text="Get Started with Us" />
            <Label styleClass="subheader-text" text="Complete these easy steps to register your account." />
            <Button styleClass="step-button" text="1. Sign up your account" />
            <Button styleClass="step-button" text="2. Set up your workspace" />
            <Button styleClass="step-button" text="3. Set up your profile" />
        </VBox>

        <!-- Right Panel for login form -->
        <VBox alignment="CENTER" layoutX="847.0" layoutY="57.0" prefHeight="562.0" prefWidth="464.0" spacing="20.0" styleClass="form-container">
            <Label styleClass="form-title" text="Sign Up Account" />
            <TextField fx:id="firstNameField" promptText="First Name" styleClass="input-field" />
            <TextField fx:id="lastNameField" promptText="Last Name" styleClass="input-field" />
            <TextField fx:id="emailField" promptText="Email" styleClass="input-field" />
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field" />
            <Button fx:id="signUpButton" styleClass="login-button" text="Sign Up" />
            <Label styleClass="login-text" text="Already have an account? Log in" />
        </VBox>
    </children>
</AnchorPane>
