<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox fx:id="rootPane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.LoginController">
   <children>
      <VBox fx:id="formBox" alignment="CENTER" prefHeight="400.0" prefWidth="320.0" spacing="10" styleClass="form-box">
         <children>
            <Label styleClass="title" text="USER LOGIN" />
            <Label styleClass="subtitle" text="Please enter your details" />
            <TextField fx:id="userNameField" promptText="Username" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <CheckBox fx:id="rememberMeCheckBox" text="Remember for 30 days" />
            <Hyperlink fx:id="forgotPasswordLink" text="Forgot password?" />
            <Button fx:id="loginButton" onAction="#login" styleClass="login-button" text="Login" />
            <Hyperlink fx:id="signUpLink" onAction="#openSignUp" styleClass="hyperlink" text="Don't have an account? Sign up" />
         </children>
      </VBox>
   </children>
</HBox>
